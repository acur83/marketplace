<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="market_po_tree_view_inh" model="ir.ui.view">
    <field name="name">market_p.po.tree.view.inh</field>
    <field name="model">purchase.order</field>
    <field name="inherit_id" ref="purchase.purchase_order_tree"/>
    <field name="arch" type="xml">
      <xpath expr="//tree/field[@name='amount_untaxed']"
      	     position="replace">
      	<field name="initial_amount" string="Valor Inicial"/>
      	<field name="employee_evaluation" string="Evaluación del Proveedor"/>
      </xpath>
      <xpath expr="//tree/field[@name='amount_total']"
      	     position="replace">
      	<field name="amount_total" string="Propuesta"/>
      </xpath>
    </field>
  </record>

  <record id="view_market_purchase_order_inh" model="ir.ui.view">
    <field name="name">market_p.purchase.order.inh.form.view</field>
    <field name="model">purchase.order</field>
    <field name="inherit_id" ref="purchase.purchase_order_form"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet/notebook/page[@name='purchase_delivery_invoice']"
      	     position="attributes">
        <attribute name="attrs">{'invisible': True}</attribute>
      </xpath>
      <xpath expr="//sheet/group/group/field[@name='partner_id']"
      	     position="before">
  	<field name="computed_partner_id" string="Proveedor"/>
      </xpath>
      <xpath expr="//sheet/group/group/field[@name='computed_partner_id']"
      	     position="after">
  	<field name="employee_evaluation" string="Evaluación de Servicio"/>
      </xpath>
      <xpath expr="//sheet/group/group/field[@name='partner_id']"
      	     position="attributes">
        <attribute name="attrs">{'invisible': True}</attribute>
      </xpath>
      <xpath expr="//sheet/group/group/field[@name='partner_ref']"
      	     position="attributes">
        <attribute name="attrs">{'invisible': True}</attribute>
      </xpath>
      <xpath expr="//sheet/group/group/field[@name='origin']"
      	     position="attributes">
        <attribute name="attrs">{'invisible': True}</attribute>
      </xpath>
    </field>
  </record>

  <record id="view_po_inherit_licitator_user" model="ir.ui.view">
    <field name="name">po.licitator.user.form.view</field>
    <field name="model">purchase.order</field>
    <field name="inherit_id" ref="purchase.purchase_order_form"/>
    <field name="groups_id"
	   eval="[(6, 0, [ref('mark_place.group_lititator_user')])]"/>
    <field name="arch" type="xml">
      <xpath expr="//header/button[@name='print_quotation']" position="attributes">
      	<attribute name="invisible">True</attribute>
      </xpath>
      <xpath expr="//header/button[@name='action_rfq_send']" position="attributes">
      	<attribute name="invisible">True</attribute>
      </xpath>
      <xpath expr="//header/button[@id='bid_confirm']" position="attributes">
      	<attribute name="invisible">True</attribute>
      </xpath>
      <xpath expr="//header/button[@id='draft_confirm']" position="attributes">
      	<attribute name="invisible">True</attribute>
      </xpath>
      <xpath expr="//header/button[@name='button_cancel']" position="attributes">
      	<attribute name="invisible">True</attribute>
      </xpath>
      <xpath expr="//sheet/notebook/page/field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
	<attribute name="readonly">True</attribute>
      </xpath>
      <xpath expr="//sheet/notebook/page/field[@name='order_line']/tree/field[@name='date_planned']" position="attributes">
      	<attribute name="invisible">True</attribute>
      </xpath>
      <xpath expr="//sheet/notebook/page/field[@name='order_line']/tree/field[@name='name']" position="attributes">
      	<attribute name="invisible">True</attribute>
      </xpath>
      <xpath expr="//sheet/notebook/page/field[@name='order_line']/tree/field[@name='taxes_id']" position="attributes">
      	<attribute name="invisible">True</attribute>
      </xpath>
    </field>
  </record>

  <record id="view_market_purchase_order_form_inh" model="ir.ui.view">
    <field name="name">market_p.purchase.req.inh.form.view</field>
    <field name="model">purchase.order</field>
    <field name="inherit_id"
	   ref="purchase_requisition.purchase_order_form_inherit"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='requisition_id']" position="attributes">
        <attribute name="attrs">{'invisible': True}</attribute>
      </xpath>
    </field>
  </record>
</odoo>
